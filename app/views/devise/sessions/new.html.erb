<div class="container-form">
  <div class="form-login">

    <!-- Sign-in and Log-in toggler -->
    <div class="row">
      <div class="col-xs-5 col-xs-offset-1">
        <div class="login-tab">
          TOGGLE LOG IN
        </div>
      </div>
      <div class="col-xs-5">
        <div class="login-tab" id="adjust-margin">
         TOGGLE SIGN IN
        </div>
      </div>
    </div>

    <!-- E-mail and Password forms -->

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="form-style">
          <%= f.input :email, required: false, autofocus: true, placeholder: "Testing", label: false %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="form-style">
          <%= f.input :password, required: false, placeholder: "testing", label: false %>
        </div>
        <!-- <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %> -->
      </div>
    </div>


    <!-- Log-in button -->

    <div class="row">
      <div class="lower-button">
      <div class="col-xs-6 col-xs-offset-3">
        <div class="form-actions" id="lower-button">
          <%= f.button :submit, "Log in", class:"button-login" %>
        </div>
        <% end %>
        <div>
        </div>

      </div>
      </div>
    </div>
   <!--  <div class="row">
          <div class="col-xs-6 col-xs-offset-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
  </div> -->
</div>
</div>
</div>
</div>









