<div class="container-form">
  <div class="form-login">

    <!-- Sign-in and Log-in toggler -->
    <div class="row">
      <div class="col-xs-5 col-xs-offset-1">
        <div class="login-tab">
          LOG IN
        </div>
      </div>
      <div class="col-xs-5">
        <div class="login-tab" id="adjust-margin">
          SIGN IN
        </div>
      </div>
    </div>

    <!-- E-mail and Password forms -->

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="form-style">

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :name, required: true, autofocus: true, placeholder: "Username", label: false %>
            <%= f.input :email, required: true, placeholder: "Email", label: false, autofocus: true %>
            <%= f.input :password, required: true, placeholder: "Password", label: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, required: true, placeholder: "Confirm Password", label: false %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Sign up" %>
          </div>
          <% end %>

        </div>
        <!-- <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %> -->
      </div>
    </div>


    <!-- Sign Up button -->

    <div class="row">
      <div class="lower-button">
        <div class="col-xs-6 col-xs-offset-3">
          <div class="form-actions" id="lower-button">
            <%= f.button :submit, "Sign Up", class:"button-login" %>
          </div>
          <% end %>
          <div>
          </div>

        </div>
      </div>
    </div>
   <!--  <div class="row">
          <div class="col-xs-6 col-xs-offset-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div> -->
  </div>
</div>
</div>
</div>









