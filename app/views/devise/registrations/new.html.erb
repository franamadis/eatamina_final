<div class="container text-center" style="background-color: #f4f4f4;">
  <div class="form-login2">
    <div class="row">
      <h2>SIGN UP</h2>
        <div class="col-xs-12 col-sm-4 col-sm-offset-4">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <!-- <div class=""> -->
              <%= f.input :email, autofocus: true , placeholder: "bob@gmail.com"  %>
              <%= f.input :name, autofocus: true, placeholder: "Bob Ray"  %>
              <%= f.input :password, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "••••••" %>
              <%= f.input :password_confirmation, placeholder: "••••••" %>
          <!-- </div> -->

          <div class="form-actions">
            <%= f.button :submit, "Sign Up", class: "submit-button", style: "background-color: #3fabc6"%>
          </div>
      <!-- end of submit button -->
        <% end %>
        <%= render "devise/shared/links" %>
      </div> <!-- end of column -->
    </div> <!-- end of row -->
  </div> <!-- end of form login -->
</div> <!-- end of container  -->
<%= render 'shared/footer' %>






