<%= form_for(@product) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Puts the name of the product here", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :brand %>
    <%= f.text_field :brand, placeholder: "Puts the brand of the product here", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :sku %>
    <%= f.text_field :sku, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :photo %>
    <%= f.text_field :photo, placeholder: "Puts the URL of one photo here", class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
<%= render 'shared/footer' %>
