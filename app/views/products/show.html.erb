<div class="detail-page">

  <div class="banner-detail" style="background: linear-gradient(-225deg, rgba(255,255,255, 0.3);">

    <div class="banner-content">

        <div class="row">
          <div class="col-xs-6">

            <div>
              <% if @product.photo? %>
                <%= image_tag @product.photo, class:"photo" %>
              <% else %>
                <%= image_tag 'https://upload.wikimedia.org/wikipedia/commons/thumb/6/6c/No_image_3x4.svg/1024px-No_image_3x4.svg.png',  class:"photo" %>
              <% end  %>
            </div>
          </div> <!-- end of photo's colum  -->


          <div class="col-xs-6 product">
            <div>
              <p><%= @product.name %></p>
            </div>

            <div id="brand">
              <% if @product.brand? %>
                <p><%= @product.brand %></p>
              <% end %>
            </div>

            <div id="grade">
               <% if @product.nutrition_grade? %>
                <p><%= @product.nutrition_grade.capitalize %></p>
              <% end %>
            </div>

<!-- heart icon favorites heart -->

            <%= link_to like_product_path(@product), method: :put do %>
              <%= image_tag "calories.png", id: "heart" %>
<!--               <i class="fa fa-thumbs-up"></i>
 -->              <%= @product.get_upvotes.size %>
            <% end %>
          </div>
<!-- second column product info  -->

       </div>
<!-- end of 1 row -->

        <div class="row">
          <div class="col-xs-12">

            <div class="separator">
              <p>ADITIVOS ALIMENTARIOS:</p>
            </div>

            <div class="chemical-click">
               <% if @product.prod_add != nil %>

              <!--   <ul class=""> -->
                  <% JSON[@product.prod_add].each do |additive| %>
                    <% @additive = additive[3..6].capitalize %>
                    <% if Additive.find_by_chemical(@additive) == nil %>

    <!-- adding button link -->
                      <div class="button-chemical"> <%= @additive %>
                      </div>
                   <!-- link to detail of particular additive (chemical) -->
                    <% else %>

    <!-- adding button link with redirection -->
                      <div class="button-chemical"> <%= link_to @additive, additive_path(Additive.find_by_chemical(@additive)) %> </div>
                    <% end %>
                  <% end %>

                <!-- </ul> -->
              <% else %>
                  <!-- <p>No chemicals</p> -->
              <% end  %>
            </div>
<!-- end of chemicals buttons part -->
          </div>
          <!-- end of column 12  -->
        </div>
<!-- end of row middle body -->


      <div class="row">

              <div class="separator">
              <p>INFORMACION NUTRICIONAL</p>
            </div>



        <div class="col-xs-6">
          <p id="valor">VALORES POR 100G DE PRODUCTO</p>
<!-- has to be finished LAYOUT AND ICONS-->
          <ul class="underlined">
            <li> <%= image_tag "calories.png", class: "icons" %> GRASAS </li>
            <li> <%= image_tag "calories.png", class: "icons" %> AZUCARES</li>
            <li> <%= image_tag "calories.png", class: "icons" %> PROTEINAS</li>
            <li> <%= image_tag "calories.png", class: "icons" %> SAL</li>
            <li> <%= image_tag "calories.png", class: "icons" %> CALORIAS</li>
          </ul>
        </div>
        <!-- end of column 2nd column with data -->

<!-- has to be finished LAYOUT-->

        <div class="col-xs-6">
          <!-- <p>Nutritional Information:</p> -->
         <% if @product.nutritional_info? %>
            <% nutritional = eval(@product.nutritional_info) %>
          <ul class="underlined">
            <li> <%= nutritional['fat_100g'] %> g </li>
            <li> <%= nutritional['sugars_100g'] %> g </li>
            <li> <%= nutritional['proteins_100g'] %> g </li>
            <li> <%= nutritional['salt_100g'] %> g </li>
            <li> <%= nutritional['energy_100g'] %> Kcal </li>
          </ul>
           <% else %>
            <!-- <p>Sorry no data!</p> -->
          <% end  %>
        </div>
        <!-- end of 2nd column nutrition's data -->

      </div>
<!-- end of calories row -->

<!-- FOOTER STARTS HERE -->
   <div class="row">
      <div class="col-xs-12">


          <!-- favorites -->
          <%= image_tag "camera.jpg", class: "icons-bottom" %>
          <%= link_to like_product_path(@product), method: :put do %>
                <i class="fa fa-thumbs-up"></i>
          <% end %>
          <!-- scanner -->
          <%= image_tag "camera.jpg", class: "icons-bottom" %>

          <!-- history -->
          <%= image_tag "camera.jpg", class: "icons-bottom" %>

      </div> <!-- end of column -->
    </div> <!-- end of row of footer -->


    </div>



  </div> <!-- banner-detail -->


</div>


