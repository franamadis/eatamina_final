<div class="col-xs-12">
<div class="chemical-click">
 <% if @product.prod_add != nil %>

 <!--   <ul class=""> -->
  <% JSON[@product.prod_add].each do |additive| %>
  <% @additive = additive[3..6].capitalize %>
  <% if Additive.find_by_chemical(@additive) == nil %>

  <!-- adding button link -->
  <div class="button-chemical"> <%= @additive %>
  </div>
  <!-- link to detail of particular additive (chemical) -->
  <% else %>

  <!-- adding button link with redirection -->
    <% if Additive.find_by_chemical(@additive).risk == "Baja" %>
      <div class="button-chemical-good"> <%= link_to @additive, additive_path(Additive.find_by_chemical(@additive)) %> </div>
      <% elsif Additive.find_by_chemical(@additive).risk == "Media" %>
      <div class="button-chemical-medium"> <%= link_to @additive, additive_path(Additive.find_by_chemical(@additive)) %> </div>
      <% elsif Additive.find_by_chemical(@additive).risk == "Alta" %>
       <div class="button-chemical-bad"> <%= link_to @additive, additive_path(Additive.find_by_chemical(@additive)) %> </div>
       <% else %>
       <div class="button-chemical-unknown"> <%= link_to @additive, additive_path(Additive.find_by_chemical(@additive)) %> </div>
    <% end %>
  <% end %>
  <% end %>

