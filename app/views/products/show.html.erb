            <% end %>
          </div>
        </div>
        <div class="grid-item-c-down-right">
        <%  if @product.nutrition_grade? %>  
          <% if @product.nutrition_grade.capitalize == "A" %>
              <img src="<%= image_path 'score100.png'%>" class="grade-image">  
