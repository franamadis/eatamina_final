<div class="width-wrapper">
  <div class="container-index">
    <div class="title-header">
      <h3>Your last searches</h3>
    </div>
    <div class="title-header2">
      <p>You already have searched for <%=@queries.length%> products</p>
    </div>
    <div class="container-cards">
      <div class="flex-container">
        <% @queries.each do |query|%>
        <% product = Product.find_by_id(query.product_id) %>
        <div class="col-xs-12 col-sm-4">
          <% if product.photo? %>
            <div class="card flex-itemchild" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path product.photo %>');">
              <div class="card-description">
                <h2>
                  <%= link_to product.name, product_path(product)%>
                </h2>
              </div>
            </div>
          <% else %>
            <div class="card flex-itemchild" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://upload.wikimedia.org/wikipedia/commons/thumb/6/6c/No_image_3x4.svg/1024px-No_image_3x4.svg.png');">
              <div class="card-description">
                <h2>
                <%= link_to product.name, product_path(product) %>
                </h2>
              </div>
            </div>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/footer' %>
